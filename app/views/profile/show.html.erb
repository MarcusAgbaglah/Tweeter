<div class="p-6">
  <div class="flex items-center justify-between">
    <div class="flex-1 flex items-center space-x-6">
    <%= profile_image (@profile, size: "large") %>
      <h1 class="font bold text-3xl"> <%= @profile.name %>
      </h1>
      <%= "@" + @profile.username %>
    </div>
      <div> <%= link_to "Edit profile", edit_users_registration_path, class: "inline-flex justify-center items-center px-5 py-2 round-full
      border ring 4 focus:ring-purple-50 ring-transparent hover:ring-purple-50
      hover:border-gray-300" if current_user%>
      </div>
  </div>
  <ul class="list-none divided-y -mx6 mt-10">
  <%= render collection: @profile.tweets, partial: "tweets/tweet" %>
  </ul>
</div>
